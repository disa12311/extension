{
  "manifest_version": 3,
  "name": "SecureGuard Pro",
  "version": "2.0.0",
  "description": "Extension bảo mật toàn diện với TypeScript - chống tracking, phát hiện malware và bảo vệ real-time",
  "permissions": [
    "storage",
    "tabs",
    "webNavigation",
    "notifications",
    "declarativeNetRequest",
    "declarativeNetRequestFeedback",
    "declarativeNetRequestWithHostAccess",
    "scripting",
    "downloads"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "declarative_net_request": {
    "rule_resources": [
      {
        "id": "tracking_rules",
        "enabled": true,
        "path": "dist/rules.json"
      }
    ]
  },
  "background": {
    "service_worker": "dist/background.js"
  },
  "action": {
    "default_popup": "dist/popup.html",
    "default_icon": {
      "16": "dist/icons/icon16.png",
      "48": "dist/icons/icon48.png",
      "128": "dist/icons/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["dist/content.js"],
      "run_at": "document_start"
    }
  ],
  "icons": {
    "16": "dist/icons/icon16.png",
    "48": "dist/icons/icon48.png",
    "128": "dist/icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["dist/warning.html"],
      "matches": ["<all_urls>"]
    }
  ]
}